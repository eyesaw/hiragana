section(
    class="columns"
)
    div(
        class="column"
    )
        div(
            class="columns is-centered is-mobile"
        )
            div(
                class="column is-narrow"
            )
                div(
                    class="vocabulary-chars"
                )  
                    div(
                        class="symbol small border"
                    ) {{ (question.kanji ? question.kanji : question.hiragana) }} 
                    div(
                        class="vocabulary-hiragana"
                    ) {{ question.hiragana }}
        div(
            class="columns is-centered is-mobile"
        )
            div(
                class="column is-relative button-wrapper"
            )
                button(
                    v-for="c in choices"
                    @click="checkAnswer(c.translation)"
                    class="button is-primary font-small"
                ) {{ c.translation }}

        div(
            class="columns is-centered is-mobile"
        )
            div(
                class="column is-narrow"
            )
                button(
                    @click="toggleModal()"
                    class="button is-primary"
                ) {{ $t('defaultButtons.peek') }}
        div(
            class="columns is-centered is-mobile"
        )
            div(
                class="column is-narrow"
            )
                p(
                    class="bd-notification has-text-primary"
                ) {{ $t('defaultButtons.success') }}: {{ success }}
            div(
                class="column is-narrow"
            )
                p(
                    class="bd-notification error"
                ) {{ $t('defaultButtons.error') }}: {{ errorCount }}

    div(
        :class="['modal', {'is-active': modalStatus}]"
    )
        .modal-background(
            @click="toggleModal()"
        )
        .modal-card
            section(
                class="modal-card-body has-background-dark border"
            ) {{ $t('singleInput.modalCard') }} ... 
                b {{ answer }} 
                span {{ description }}
        button(
            aria-label="close"
            class="modal-close"
            @click="toggleModal()"
        )